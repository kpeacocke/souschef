{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "--cov=souschef",
        "--cov-report=term-missing"
    ],
    "python.testing.cwd": "${workspaceFolder}",
    // Pylance: Real-time type checking and intellisense in VS Code
    // Note: mypy runs in CI for stricter checks; Pylance provides immediate feedback
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnknownParameterType": "none",
        "reportUnknownVariableType": "none",
        "reportUnknownArgumentType": "none",
        "reportMissingParameterType": "none",
        "reportGeneralTypeIssues": "warning",
        "reportOptionalMemberAccess": "warning"
    },
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": false,
    // Ruff: Primary linter and formatter (replaces Black, isort, flake8)
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.enable": true,
    "ruff.lint.enable": true,
    "ruff.organizeImports": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [88],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.mypy_cache": true
    },
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "**/*.egg-info": true
    },
    "cSpell.language": "en-AU",
    "cSpell.words": [
        "charliermarsh",
        "souschef"
    ],
    "yaml.customTags": [
        "!!python/name:pymdownx.superfences.fence_code_format",
        "!!python/name:material.extensions.emoji.twemoji",
        "!!python/name:material.extensions.emoji.to_svg"
    ],
    "sonarlint.connectedMode.project": {
        "connectionId": "kpeacocke",
        "projectKey": "kpeacocke_souschef"
    },
    "ansible.lightspeed.enabled": false,
    "chat.mcp.gallery.enabled": true,
    "chat.mcp.serverSampling": {
        "souschef/.vscode/mcp.json: souschef": {
            "allowedModels": [
                "copilot/claude-sonnet-4.5"
            ]
        }
    }
}
