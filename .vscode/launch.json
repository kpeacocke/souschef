{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: pytest (Current File)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: pytest (All Tests)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp",
            "args": [
                "run",
                "souschef/server.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Go: Run Tests (terraform-provider)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/terraform-provider",
            "preLaunchTask": "Setup Go Test Environment",
            "env": {
                "TF_ACC": "1"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "cwd": "${workspaceFolder}/terraform-provider"
        },
        {
            "name": "Go: Debug Test (terraform-provider)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/terraform-provider",
            "preLaunchTask": "Setup Go Test Environment",
            "env": {
                "TF_ACC": "1"
            },
            "args": [
                "-test.v",
                "-test.run=TestAcc"
            ],
            "showLog": true,
            "cwd": "${workspaceFolder}/terraform-provider"
        },
        {
            "name": "Go: Run Current Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "preLaunchTask": "Setup Go Test Environment",
            "env": {
                "TF_ACC": "1"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "cwd": "${fileDirname}"
        }
    ]
}
